<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400px"
    android:background="@android:color/holo_blue_light"
    android:orientation="vertical">

    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:padding="10px"
        android:text="Peter Anteater"
        android:textColor="@android:color/white"
        android:textSize="40px"
        android:clickable="true"
        android:onClick="goToSingleMoviePage"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2">

        <TextView
            android:id="@+id/movieYear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10px"
            android:text="1965"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/movieDirector"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Neil Cohen"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/genreNames"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:text="Romance, Comedy"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/starNames"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Allan Arbus,Allen Garfield,Ed Lauter,Fima Noveck,Frank Prinzi,Nancy Zuker,Neil Cohen,Norman Leigh,Susan Aufhauser,Zack Norman"
        android:textSize="12sp" />

</LinearLayout>